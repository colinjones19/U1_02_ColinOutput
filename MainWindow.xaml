<Window x:Class="u1_02_ColinOutput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u1_02_ColinOutput"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label Content=""/>
        <TextBox x:Name="entryname"/>
        <Button Content="Enter your name above, then click this button"
                x:Name="btnshowgreeting"
                Click="btnshowgreeting_Click"/>
        <Label x:Name="lbloutput"
            Content=""/>
        <Slider x:Name="Slider" Margin="10, 0, 0, 0"
                Width="500" Orientation="Horizontal" HorizontalAlignment="Left"
                Value="50" Minimum="0" Maximum="50"
                SmallChange="1" LargeChange="10"
                TickPlacement="BottomRight" TickFrequency="1"/>
        <Label x:Name="lblslidervalue"
               Content="Slider Value"
        


    </StackPanel>
</Window>
